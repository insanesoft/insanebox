<style type="text/css">
    * {
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
    }

    body { font-family: sans-serif; }

    .masonry {
        max-width: 1200px;
    }

    /* clearfix */
    .masonry:after {
        content: '';
        display: block;
        clear: both;
    }

    .masonry .item {
        border-radius: 3px;
        box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.33);
        background: #ffffff;
        width: 236px;
        /*width:  60px;*/
        height: 120px;
        float: left;
        margin-left: 10px;
        margin-right: 10px;
        margin-bottom: 10px;
        border: 1px solid #333;
        border-color: hsla(0, 0%, 0%, 0.5);
        text-overflow: ellipsis;
        overflow: hidden;
    }

    .item.w2 { width:  120px; }
    .item.w3 { width:  180px; }
    .item.w4 { width:  240px; }

    .item.h2 { height: 100px; }
    .item.h3 { height: 130px; }
    .item.h4 { height: 180px; }

    .item.gigante {
        width: 500px;
        height: 450px;
    }

    .item:hover {
        background: #b7b7b7;
        border-color: white;
        cursor: pointer;
    }
</style>
